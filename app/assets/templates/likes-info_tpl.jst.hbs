{{#if likesCount}}
  <div class="comment">
    <div class="media">
      <i class="entypo heart"></i>

      <div class="bd">
        {{#unless likes_fetched}}
          <a href="#" class="expand_likes grey">
            {{t "stream.likes" count=likesCount}}
          </a>

        {{else}}

          {{#each likes}}
            {{#linkToAuthor author}}
              {{{personImage this 'small' 'micro'}}}
            {{/linkToAuthor}}
          {{/each}}
        {{/unless}}
      </div>
    </div>
  </div>
{{/if}}
