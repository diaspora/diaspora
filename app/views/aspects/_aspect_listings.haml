%h4
  .right
    = link_to t('aspects.manage.manage_aspects'), aspects_manage_path, :title => t('contacts', :count => contacts.count)

  = aspects.count
  - if aspects.count == 1
    = t('_aspect')
  - else
    = t('_aspects')

%ul
  - for aspect in aspects
    = render 'aspects/aspect', :aspect => aspect, :contacts => aspect.contacts.where(:pending => false)
