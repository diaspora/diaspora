.span-12.last
  .modal_title_bar
    %h4= t('.add_a_new_aspect')

  = form_for Aspect.new do |aspect|
    = aspect.error_messages
    %p
      = aspect.label :name , t('.name')
      = aspect.text_field :name
      = aspect.submit t('.create'), :class => 'button'

