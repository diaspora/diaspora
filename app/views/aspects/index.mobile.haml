#aspect_header
  - if @aspect == :all
    = t('all_aspects')
  - else
    = @aspect

%h1
  = link_to t('.post_a_message'), '#publisher_page', :id => 'publisher_button'
#main_stream.stream
  = render 'shared/stream', :posts => @posts
  -if @posts.length > 0
    #pagination
      %a.more-link.paginate{:href => next_page_path}
        %h2= t("more")
- content_for :subpages do
  = render 'shared/publisher', :aspect_ids => @aspect_ids
