%li.comment{:data=>{:guid=>post.id}}
  = person_image_link(post.person)
  .content
    .from
      = link_to post.person.real_name, post.person
    = markdownify(post.text)
    %div.time
      = "#{time_ago_in_words(post.updated_at)} #{t('ago')}"
