.container-fluid
  = form_for Conversation.new, html: {id: "new-conversation",
    class: "new-conversation form-horizontal form-do-not-clear"}, remote: true do |conversation|
    .form-group
      %label#to-label{for: "contacts-search-input"}= t(".to")
      .contacts-tags-list.empty-contacts-tags-list.clearfix#contacts-tags-list
      = text_field_tag "contacts-autocomplete", nil, id: "contacts-search-input", class: "form-control"
      - unless defined?(mobile) && mobile
        = text_field_tag "person_ids", nil, id: "as-values-contact-ids", type: "hidden",
          aria: {labelledby: "to-label"}

    .form-group
      %label#subject-label{for: "conversation_subject"}
        = t(".subject")
      = conversation.text_field :subject, class: "input-block-level form-control",
        aria: {labelledby: "subject-label"}, value: "", placeholder: t("conversations.new.subject_default")

    .form-group
      %label.sr-only#message-label{for: "new-message-text"}= t(".message")
      = text_area_tag "conversation[text]", "", id: "new-message-text",
        class: "conversation-message-text input-block-level form-control", rows: 5, aria: {labelledby: "message-label"}

    .form-group
      = conversation.submit t(".send"), "data-disable-with" => t(".sending"), :class => "btn btn-primary pull-right"
