!!!
%html
  %head
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = render :partial => 'notifier/notifier_css'
  %body
    %header
      = image_tag('diaspora_white.png')
    #container
      %p
        = t('devise.mailer.welcome', :email => @resource.email)
      %p= t('.you_can_confirm')
