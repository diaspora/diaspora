- content_for :page_title do
  = t('search')

- content_for :head do
  = include_javascripts :people
  = javascript_include_tag 'contact-list'

.span-24.last
  - if params[:q].blank?
    %h2
      =t('.no_results')
  - else
    %h2#search_title
      =t('.results_for')
      %span.term
        = params[:q]
  %h4
    %small
      = t('.looking_for', :tag_link => tag_page_link(params[:q])).html_safe 
.span-15
  %hr
.clearfix
.span-15.append-1
  #people_stream.stream
    - if @hashes.empty?
      %p
        =t('.no_one_found')

    - else
      - for hash in @hashes
        = render :partial => 'people/person', :locals => hash

      = will_paginate @people

.span-8.last
  %h4
    = t('.couldnt_find_them_send_invite')
  = render "shared/invitations"

