- content_for :publish do
  %h1
    Search

  =form_tag '/people', :method => "get" do
    = text_field_tag :q, params[:q]
    = submit_tag "search"

- content_for :left_pane do
  \.

%h1
  search results for
  %u= params[:q]

%ul#stream
  - for person in @people
    = render 'people/person', :person => person

= will_paginate @people
