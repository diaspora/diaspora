- content_for :page_title do
  = "Search"

.span-15.prepend-5.last
  %h2
    -if params[:q].blank?
      =t('.no_results')
    -else
      =t('.results_for')
      %u= params[:q]

  %ul{:class => 'stream people', :id => 'people_stream'}
    - for hash in @hashes
      = render :partial => 'people/person', :locals => hash

  = will_paginate @people
