%h2= "#{t('.editing')} #{@photo.image}"

%div{:id => @photo.id}
  #show_photo
    = image_tag @photo.url(:scaled_full)

  = form_for @photo do |photo|
    = photo.label :caption
    = photo.text_field :caption, :value => @photo.caption
    = photo.submit

