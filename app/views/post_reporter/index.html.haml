.span-24
  = render :partial => 'admins/admin_bar'

.span-24.last
  %h1
    = t('admins.post_reporter.title')
  %div#post_reporter
    - @post_reporter.each do |report|
      %div#content
        = t('admins.post_reporter.post_label')
        = link_to post_page_title(Post.find_by_id(report.post_id)), post_path(report.post_id)
        = t('admins.post_reporter.reported_label')
        = link_to report.user_id, user_profile_path(report.user_id)
        = t('admins.post_reporter.reason_label')
        = report.text
      %div#options
        = link_to t('admins.post_reporter.review_link'), post_reporter_path(report.post_id), method: :put
        = link_to t('admins.post_reporter.delete_link'), post_reporter_path(report.post_id), method: :delete
      %div#clear
