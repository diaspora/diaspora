.photo_area
  - if post.is_a?(StatusMessage)
    -if post.photos.size > 0
      .photo_attachments
        = link_to post.photos.first.url(:thumb_large), class: "stream-photo-link open-gallery", data: {index: 0} do
          - if post.photos.size > 1
            .additional_photo_count
              = "+ #{post.photos.size-1}"
          = image_tag post.photos.first.url(:thumb_large), class: "stream-photo big-stream-photo"
        .hidden
          - post.photos.each do |photo|
            = link_to photo.url(:scaled_full), class: "gallery-picture" do
              = image_tag photo.url(:thumb_small)
