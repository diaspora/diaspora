%h2{:style => "padding:0 10px;display:none;"}
  - if @stream.for_all_aspects?
    = t('all_aspects')
  - else
    = @stream.aspect

#main_stream.stream
  = render 'shared/stream', :posts => @stream.stream_posts
  -if @stream.stream_posts.length > 0
    #pagination
      %a.more-link.paginate{:href => next_page_path}
        %h1
          = t("more")
