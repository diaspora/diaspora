- content_for :page_title do
  = t("two_factor_auth.title")

.container-fluid
  .row
    .col-md-3
      .sidebar
        = render "shared/settings_nav"
    .col-md-9
      .framed-content.clearfix

        - if @user.otp_required_for_login
          = render "deactivate"
        - else
          = render "activate"
