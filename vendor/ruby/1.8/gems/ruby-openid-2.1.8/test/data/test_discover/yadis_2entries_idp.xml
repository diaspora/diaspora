    <CanonicalID>=!1000</CanonicalID>

    <Service priority="10">
      <Type>http://specs.openid.net/auth/2.0/signon</Type>
      <URI>http://www.myopenid.com/server</URI>
      <openid:LocalID>http://smoker.myopenid.com/</openid:LocalID>
